<component name="ProjectRunConfigurationManager">
  <configuration default="false" name="OSMT NoAuth Local Development" type="SpringBootApplicationConfigurationType" factoryName="Spring Boot">
    <module name="osmt-api" />
    <option name="SPRING_BOOT_MAIN_CLASS" value="edu.wgu.osmt.ApplicationKt" />
    <option name="ALTERNATIVE_JRE_PATH" />
    <option name="SHORTEN_COMMAND_LINE" value="NONE" />
    <option name="ENABLE_DEBUG_INFORMATION" value="false" />
    <method v="2">
      <option name="Make" enabled="true" />
    </method>
    <envs>
      <!-- Database connection - defaults match docker-compose dev stack -->
      <!-- Note: If MySQL is already running on port 3306, either stop it or change the port -->
      <!-- Database name: osmt_db, User: osmt_db_user, Password: password -->
      <env name="DB_URI" value="osmt_db_user:password@localhost:3306" />
      <env name="REDIS_URI" value="localhost:6379" />
      <env name="ELASTICSEARCH_URI" value="http://localhost:9200" />
      
      <!-- Optional: Test role configuration for noauth mode -->
      <!-- Uncomment and modify as needed for testing different roles -->
      <!-- Available roles: ROLE_Osmt_Admin, ROLE_Osmt_Curator, ROLE_Osmt_View, SCOPE_osmt.read -->
      <!-- <env name="TEST_ROLE" value="ROLE_Osmt_Admin" /> -->
      <!-- <env name="TEST_USER_NAME" value="test-user" /> -->
      <!-- <env name="TEST_USER_EMAIL" value="test@example.com" /> -->
    </envs>
    <option name="VM_PARAMETERS" value="-Dspring.profiles.active=dev,apiserver,noauth" />
    <option name="PROGRAM_PARAMETERS" value="" />
    <option name="WORKING_DIRECTORY" value="$PROJECT_DIR$/api" />
    <extension name="coverage">
      <pattern>
        <option name="PATTERN" value="edu.wgu.osmt.*" />
        <option name="ENABLED" value="true" />
      </pattern>
    </extension>
  </configuration>
</component>
